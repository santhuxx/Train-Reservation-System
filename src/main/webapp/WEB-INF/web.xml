		<servlet-name>updatestation</servlet-name>
		<servlet-class>com.station.UpdateStationServlet</servlet-class>
	</servlet>  
	<servlet-mapping>
		<servlet-name>updatestation</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	 
	 <servlet>
		<servlet-name>deletestation</servlet-name>
		<servlet-class>com.station.DeleteStationServlet</servlet-class>
	</servlet>  
	<servlet-mapping>
		<servlet-name>deletestation</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	
	</web-app>
	