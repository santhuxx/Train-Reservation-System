<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	
	<welcome-file-list>
	
			
			<welcome-file>home1.jsp</welcome-file>
			
	</welcome-file-list>
	
	
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>user.logincontrol</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
    <servlet-name>TrainInsert</servlet-name>
    <servlet-class>train.traininput</servlet-class>
	</servlet>
	<servlet-mapping>
    <servlet-name>TrainInsert</servlet-name>
    <url-pattern>/TrainInsert</url-pattern>
	</servlet-mapping>
	
	<servlet>
    <servlet-name>updateTrain</servlet-name>
    <servlet-class>train.trainupdateservelet</servlet-class>
	</servlet>
	<servlet-mapping>
    <servlet-name>updateTrain</servlet-name>
    <url-pattern>/trainUpdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
    <servlet-name>deletetrain</servlet-name>
    <servlet-class>train.traindeleteservelet</servlet-class>
	</servlet>
	<servlet-mapping>
    <servlet-name>deletetrain</servlet-name>
    <url-pattern>/deletetrain</url-pattern>
	</servlet-mapping>
	
	 <display-name>station</display-name>
  <welcome-file-list>
    <welcome-file>stationinsert.jsp</welcome-file>

  </welcome-file-list>
  
 

	   
	<servlet>
		<servlet-name>stationinsert</servlet-name>
		<servlet-class>com.station.StationInsert</servlet-class>
	</servlet>  
	<servlet-mapping>
		<servlet-name>stationinsert</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	
